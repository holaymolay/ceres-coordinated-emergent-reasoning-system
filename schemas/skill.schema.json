{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SkillDefinition",
  "type": "object",
  "required": [
    "name",
    "purpose",
    "inputs",
    "outputs",
    "constraints",
    "allowed_roles",
    "entrypoint",
    "type"
  ],
  "properties": {
    "name": { "type": "string" },
    "purpose": { "type": "string" },
    "inputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "required": { "type": "boolean" },
          "description": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "description": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "constraints": {
      "type": "array",
      "items": { "type": "string" }
    },
    "allowed_roles": {
      "type": "array",
      "items": { "type": "string" }
    },
    "concept_scope": { "type": "string" },
    "type": { "type": "string", "enum": ["analytical", "transform"] },
    "entrypoint": { "type": "string" },
    "version": { "type": "string" }
  },
  "additionalProperties": false
}
