{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Synchronization",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "from": {
      "type": "string",
      "minLength": 1
    },
    "to": {
      "type": "string",
      "minLength": 1
    },
    "direction": {
      "type": "string",
      "enum": ["bidirectional"]
    },
    "concepts": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "allow_cycle": {
      "type": "boolean"
    },
    "message_contract": {
      "type": "object",
      "required": ["input_schema", "output_schema", "transport"],
      "properties": {
        "input_schema": {
          "type": "string",
          "minLength": 1
        },
        "output_schema": {
          "type": "string",
          "minLength": 1
        },
        "transport": {
          "type": "string",
          "enum": ["internal", "mcp", "external"]
        }
      },
      "additionalProperties": false
    }
  },
  "oneOf": [
    {
      "required": ["from", "to"],
      "not": {
        "required": ["concepts"]
      }
    },
    {
      "required": ["direction", "concepts"],
      "properties": {
        "direction": {"const": "bidirectional"}
      },
      "not": {
        "required": ["from", "to"]
      }
    }
  ],
  "additionalProperties": false
}
