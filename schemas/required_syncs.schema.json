{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RequiredSynchronizations",
  "type": "object",
  "required": ["synchronizations"],
  "properties": {
    "synchronizations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["sync_id", "from_concept", "to_concept", "status"],
        "properties": {
          "sync_id": { "type": "string" },
          "from_concept": { "type": "string" },
          "to_concept": { "type": "string" },
          "status": { "type": "string", "enum": ["existing", "new"] },
          "reason": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
