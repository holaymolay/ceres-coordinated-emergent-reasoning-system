{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TaskGraph",
  "type": "object",
  "required": ["tasks", "edges"],
  "properties": {
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["task_id", "description"],
        "properties": {
          "task_id": { "type": "string" },
          "description": { "type": "string" },
          "type": { "type": "string", "description": "planning | validation | execution" },
          "priority": { "type": ["string", "number"] },
          "timestamp": { "type": ["string", "number"] },
          "depends_on": {
            "type": "array",
            "items": { "type": "string" }
          },
          "acceptance": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to"],
        "properties": {
          "from": { "type": "string" },
          "to": { "type": "string" },
          "type": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
