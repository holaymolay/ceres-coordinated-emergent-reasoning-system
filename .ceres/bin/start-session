#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(CDPATH= cd -- "$(dirname -- "${BASH_SOURCE[0]}")" && pwd)"
source "$SCRIPT_DIR/_paths.sh"

SCRIPT="$(resolve_script start-session.sh)" || { echo "ERROR: start-session.sh not found in core or root scripts" >&2; exit 1; }

cd "$REPO_ROOT"
exec env CERES_HOME="$CERES_HOME" CERES_WORKSPACE="$CERES_WORKSPACE" "$SCRIPT" "$@"
